<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ProductsModel" table="Products">

		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>

		<id name="productCode" type="string" column="productCode">
			<generator class="native" />
		</id>

		<property name="productName" column="productName" type="string" />
		<property name="productLine" column="productLine" type="string" />
		<property name="productScale" column="productScale" type="string" />
		<property name="productVendor" column="productVendor" type="string" />
		<property name="productDescription" column="productDescription" type="string" />
		<property name="quantityInStock" column="quantityInStock" type="Integer" />
		<property name="buyPrice" column="buyPrice" type="big_decimal" />
		<property name="MSRP" column="MSRP" type="big_decimal" />

	</class>
</hibernate-mapping>